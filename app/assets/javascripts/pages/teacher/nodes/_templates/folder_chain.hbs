{{#ifCond type "folder"}}
  {{#each folder_chain}}
    {{#if separate}}
      <div class="folder-chain-separator">
        <span>/</span>
      </div>
    {{else}}
      <div class="link-div">
        <a href="/teacher/nodes?folder_id={{id}}">{{name}}</a>
      </div>
    {{/if}}
  {{/each}}
{{/ifCond}}
{{#ifCond type "trash"}}
  <span>回收站</span>
{{/ifCond}}
{{#ifCond type "recent"}}
