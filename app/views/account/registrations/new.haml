- content_for :head do
  = stylesheet_link_tag "pages/account/registrations-bundle", :media => "all"
  = javascript_include_tag "pages/account/registrations-bundle"

.container
  .row
    .col-sm-4.col-sm-offset-4.col-xs-10.col-xs-offset-1
      = form_tag(account_registrations_path, id: "registration-form", method: "post", multipart: true) do
        = link_to "我是学生", "/welcome/student_app", class: 'student-role'
        %fieldset
          %legend 教师注册
          .form-group.hide
            = text_field_tag :role, "teacher"
          .form-group
            = label_tag :email_mobile, "邮箱"
            = text_field_tag :email_mobile, "", :autofocus => true, class: "form-control"
          .form-group
            = label_tag :password, "密码"
            = text_field_tag :password, "", class: "form-control"
          .form-group
            = label_tag :name, "姓名"
            = text_field_tag :name, "", class: "form-control"
          .form-group
            = label_tag :name, "学科"
            = select_tag :subject, options_for_select(Subject::CODE, 2), class: "form-control"
          .content
            .login.right
              = link_to "已有帐号，立即登录", new_account_session_path
          = submit_tag "注册", class: "btn btn-primary"
