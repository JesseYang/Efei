- content_for :head do
  = javascript_include_tag "pages/account/registrations-bundle"

.container
  .row
    .col-sm-4.col-sm-offset-4.col-xs-10.col-xs-offset-1
      = form_tag(account_registrations_path, method: "post", multipart: true) do
        %fieldset
          %legend 注册
          .form-group
            = label_tag :email_mobile, "邮箱"
            = text_field_tag :email_mobile, "", :autofocus => true, class: "form-control"
          .form-group
            = label_tag :password, "密码"
            = text_field_tag :password, "", class: "form-control"
          .form-group
            = label_tag :name, "姓名"
            = text_field_tag :name, class: "form-control"
          = submit_tag "注册", class: "btn btn-default"
