.container
  .row
    .col-sm-4.col-sm-offset-4.col-xs-10.col-xs-offset-1
      = form_tag(account_passwords_path, method: "put", multipart: true) do
        = hidden_field_tag :key, @key
        %fieldset
          %legend 重设密码
          .form-group
            = label_tag :password, "新密码"
            = password_field_tag :password, "", :autofocus => true, class: "form-control"
          .form-group
            = label_tag :password_confirmation, "确认密码"
            = password_field_tag :password_confirmation, "", :autofocus => true, class: "form-control"
          = submit_tag "重设密码", class: "btn btn-default"
