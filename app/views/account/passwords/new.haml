.container
  .row
    .col-sm-4.col-sm-offset-4.col-xs-10.col-xs-offset-1
      = form_tag(account_passwords_path, method: "post", multipart: true) do
        %fieldset
          %legend 忘记密码
          .form-group
            = label_tag :email, "邮箱"
            = email_field_tag :email, "", :autofocus => true, class: "form-control"
          = submit_tag "发送邮件", class: "btn btn-default"
