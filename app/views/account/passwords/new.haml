- content_for :head do
  = stylesheet_link_tag "pages/account/passwords-bundle", :media => "all"
  = javascript_include_tag "pages/account/passwords-bundle"

.container
  .row
    .col-sm-4.col-sm-offset-4.col-xs-10.col-xs-offset-1
      = form_tag(account_passwords_path, id: "password-form", method: "post", multipart: true) do
        %fieldset
          %legend 忘记密码
          .form-group
            = label_tag :email_mobile, "邮箱"
            = email_field_tag :email_mobile, "", :autofocus => true, class: "form-control"
          .content
            .login.right
              = link_to "直接登录", new_account_session_path
          = submit_tag "发送邮件", class: "btn btn-primary"
