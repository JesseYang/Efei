- content_for :app_head do
  = javascript_include_tag "pages/client/users/pre_bind-bundle"
  = stylesheet_link_tag "pages/client/users/pre_bind-bundle", :media => "all"

- content_for :app_content do
  .wrapper
    %p 请输入机构名称和密码完成和微信帐号的绑定
    = form_tag(bind_client_users_path, id: "bind-weixin-form", method: "post", multipart: true) do
      %fieldset
        .form-group
          = text_field_tag :client_name, "", :autofocus => true, :placeholder => "机构名称", class: "form-control"
        .form-group
          = password_field_tag :client_password, "", :autofocus => true, :placeholder => "机构密码", class: "form-control"
        .content
        = submit_tag "绑定", class: "btn btn-primary bind-btn form-control"
