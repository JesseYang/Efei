- content_for :app_head do
  / = javascript_include_tag "pages/client/students/show-bundle"
  = stylesheet_link_tag "pages/client/students/show-bundle", :media => "all"

.wrapper
  = form_tag(client_student_path(@student), method: "put", multipart: true) do
    %fieldset
      .form-group
        = text_field_tag "student[name]", @student.name, :autofocus => true, :placeholder => "学生姓名", class: "form-control"
      .form-group
        = password_field_tag "student[password]", "", :autofocus => true, :placeholder => "学生密码", class: "form-control"
      .form-group
        = text_field_tag "student[mobile]", @student.mobile, :autofocus => true, :placeholder => "手机号", class: "form-control"
      .form-group
        = text_field_tag "student[email]", @student.email, :autofocus => true, :placeholder => "邮箱", class: "form-control"
      .content
      = submit_tag "更新", class: "btn btn-primary bind-btn form-control"


#footer
  %table
    %tr
      %td.not-right-td
        %span.bottom-nav= "信息"
      %td.not-right-td
        =link_to "老师", coaches_client_student_path(@student), { class: "bottom-nav" }
      %td
        =link_to "课程", courses_client_student_path(@student), { class: "bottom-nav" }
