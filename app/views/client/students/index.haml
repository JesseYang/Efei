- content_for :app_head do
  = javascript_include_tag "pages/client/students/index-bundle"
  = stylesheet_link_tag "pages/client/students/index-bundle", :media => "all"

%h4= "您当前共#{@students.length}位学生"

%ul
  - @students.each do |s|
    %li
      = link_to s.name, client_student_path(s), class: "student-detail"
      = link_to "删除", "/client/students/" + s.id, method: "delete", class: "delete-student"
