- content_for :app_head do
  / = javascript_include_tag "pages/client/coaches/new-bundle"
  = stylesheet_link_tag "pages/client/coaches/new-bundle", :media => "all"

.wrapper
  %p 填写教师资料并创建
  = form_tag(client_coaches_path, method: "post", multipart: true) do
    %fieldset
      .form-group
        = text_field_tag "coach[name]", "", :autofocus => true, :placeholder => "教师姓名", class: "form-control"
      .form-group
        = text_field_tag "coach[coach_number]", "", :autofocus => true, :placeholder => "教师工号", class: "form-control"
      .form-group
        = password_field_tag "coach[password]", "", :autofocus => true, :placeholder => "教师密码", class: "form-control"
      .form-group
        = text_field_tag "coach[mobile]", "", :autofocus => true, :placeholder => "手机号", class: "form-control"
      .form-group
        = text_field_tag "coach[email]", "", :autofocus => true, :placeholder => "邮箱", class: "form-control"
      .content
      = submit_tag "创建", class: "btn btn-primary bind-btn form-control"