- content_for :app_head do
  / = javascript_include_tag "pages/client/students/show-bundle"
  = stylesheet_link_tag "pages/client/coaches/show-bundle", :media => "all"

.wrapper
  = form_tag(client_coach_path(@coach), method: "put", multipart: true) do
    %fieldset
      .form-group
        = text_field_tag "coach[name]", @coach.name, :autofocus => true, :placeholder => "教师姓名", class: "form-control"
      .form-group
        = text_field_tag "coach[coach_number]", @coach.coach_number, :autofocus => true, :placeholder => "教师工号", class: "form-control"
      .form-group
        = password_field_tag "coach[password]", "", :autofocus => true, :placeholder => "教师密码", class: "form-control"
      .form-group
        = text_field_tag "coach[mobile]", @coach.mobile, :autofocus => true, :placeholder => "手机号", class: "form-control"
      .form-group
        = text_field_tag "coach[email]", @coach.email, :autofocus => true, :placeholder => "邮箱", class: "form-control"
      .content
      = submit_tag "更新", class: "btn btn-primary bind-btn form-control"

#footer-prev
#footer
  %table
    %tr
      %td.not-right-td
        %span.bottom-nav= "信息"
      %td.not-right-td
        =link_to "学生", students_client_coach_path(@coach), { class: "bottom-nav" }
