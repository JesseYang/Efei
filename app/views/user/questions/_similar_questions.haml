- content_for :head do
  = javascript_include_tag "pages/user/questions-bundle"
  = stylesheet_link_tag "pages/user/questions-bundle", :media => "all"

- questions.each do |q|
  .question-div
    .question-content-div
      .question-content
        %p= q.content
      .question-items
        - q.items.each_with_index do |item, index|
          %p
            %label= d2c(index) + ". "
            %span= item
    .question-operation-div
      %ul
        %li
          %a{href: "#"}
            %em.glyphicon.glyphicon-paperclip
        %li
          %a{href: "#"}
            %em.glyphicon.glyphicon-book
    .clear-both
