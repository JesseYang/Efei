- content_for :app_head do
  = yield :head
- content_for :app_nav do
  #app-user-navbar.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: "#"} 易飞
      .navbar-collapse.collapse
        = form_tag(account_sessions_path, method: "post", multipart: true, :class => "navbar-form navbar-right") do |f|
          .form-group
            = text_field_tag :email_mobile, "", :autofocus => true, class: "form-control", placeholder: "邮箱", size: 20
          .form-group
            = password_field_tag :password, "", class: "form-control", placeholder: "密码", size: 20
          = submit_tag "登录", class: "btn btn-success"
- content_for :app_content do
  = yield

= render :template => 'layouts/application'
