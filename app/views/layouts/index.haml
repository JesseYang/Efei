- content_for :app_head do
  // = javascript_include_tag "layouts/student-layout"
  = yield :head
- content_for :app_nav do
  #app-user-navbar.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: "#"} 易飞
      .navbar-collapse.collapse
        = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "navbar-form navbar-right"}) do |f|
          .form-group
            = f.email_field :email, :autofocus => true, class: "form-control", placeholder: "邮箱", size: 20
          .form-group
            = f.password_field :password, class: "form-control", placeholder: "密码", size: 20
          = f.submit "登录", class: "btn btn-success"
- content_for :app_content do
  = yield

= render :template => 'layouts/application'
