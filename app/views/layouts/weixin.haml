- content_for :app_head do
  = stylesheet_link_tag "layouts/weixin-layout", :media => "all"
  = javascript_include_tag "layouts/weixin-layout"
  = yield :head
- content_for :app_nav do
  #weixin-navbar
    - if params[:action] == "index"
      %a.left.filter-link{href: "javascript:void(0);"}
        %i.icon.filter
    - else
      %a.left.return-link{href: weixin_courses_path}
        %i.icon.return
    %h1#title= @title
    %a.right.user-link{href: "javascript:void(0);"}
      %i.icon.user
- content_for :app_content do
  = yield

= render :template => 'layouts/application'
