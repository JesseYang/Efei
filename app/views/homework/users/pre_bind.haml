- content_for :app_head do
  = javascript_include_tag "pages/homework/users/pre_bind-bundle"
  = stylesheet_link_tag "pages/homework/users/pre_bind-bundle", :media => "all"

- content_for :app_content do
  .wrapper
    %p 请输入姓名和授权码完成和微信帐号的绑定
    = form_tag(bind_homework_users_path, id: "bind-weixin-form", method: "post", multipart: true) do
      %fieldset
        .form-group
          = text_field_tag :teacher_name, "", :autofocus => true, :placeholder => "教师姓名", class: "form-control"
        .form-group
          = password_field_tag :teacher_auth_code, "", :autofocus => true, :placeholder => "授权码", class: "form-control"
        .content
        = submit_tag "绑定", class: "btn btn-primary btn-main form-control"
