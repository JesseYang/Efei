- content_for :head do
  = javascript_include_tag "pages/teacher/slides/show-bundle"
  = stylesheet_link_tag "pages/teacher/slides/show-bundle", :media => "all"
  :javascript

#content-container
  %table#content-table
    %tr
      %td#left-part
        #thumbnails
          - @slide.page_ids.each_with_index do |p, i|
            .thumbnail-wrapper{data: {id: p}}
              .thumbnail
                =image_tag(Rails.application.config.slides_host + "/public/slides/#{p}.jpg")
      %td#right-part
        #current-image
          =image_tag(Rails.application.config.slides_host + "/public/slides/#{@slide.page_ids[0]}.jpg")
