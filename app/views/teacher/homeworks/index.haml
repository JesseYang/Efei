- content_for :head do
  = stylesheet_link_tag "pages/teacher/homeworks/index-bundle", :media => "all"
  = javascript_include_tag "pages/teacher/homeworks/index-bundle"
  :javascript
    window.folder_id = "#{@folder_id}"

#homework-index
  #search-bar
  #main-part
    #left-part
      #new-button
        %a#create-btn.btn.btn-danger 新建作业
      #folders
        .folder-list.root#root-folder
          .folder-name
            %span.icon
            %span.name 我的文件夹
          .children.hide
        .recent.root
          .folder-name
            %span.icon
            %span 最近使用
        .trash.root
          .folder-name
            %span.icon
            %span 回收站
    #right-part
      %span bbb


#newFolderModal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{type: "button", "data-dismiss" => "modal", "aria-hidden" => "true"} &times;
        %h3 新建文件夹
      .modal-body
        %p
          %span 请输入新文件夹的名称
        %p
          %input.target.form-control{type: "text", value: "新文件夹"}/
      .modal-footer
        %a.btn.btn-primary.ok{href: "#", "aria-hidden" => "true"} 确定
        %a.btn.btn-default{href: "#", data: {dismiss: "modal"}, "aria-hidden" => "true"} 取消
