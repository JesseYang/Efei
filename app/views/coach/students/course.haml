- content_for :app_head do
  = javascript_include_tag "pages/coach/students/course-bundle"
  = stylesheet_link_tag "pages/coach/students/course-bundle", :media => "all"

%p.course-name
  %span= @course.name

- @course.lessons.each do |l|
  .one-lesson-wrapper
    .one-lesson
      .left-part
        = link_to l.name, report_coach_student_path(@student) + "?lesson_id=" + l.id.to_s
